<article class="speaker--card">
  <img class="speaker__picture" src="/assets/img/{{this.speaker.picture}}">
  <h3 class="speaker__name">
    <a href="https://twitter.com/{{this.speaker.twitter}}" title="{{this.speaker.name}}'s Twitter profile">
      {{this.speaker.name}}
    </a>
  </h3>
  <p class="speaker__talk subheader">{{ this.description }}</p>
</article>