<article class="speaker__card">
  {{#if speaker}}
    <a title="See details about {{speaker.name}}'s talk" href="/{{path}}"> 
      <img class="speaker__picture" src="/assets/img/{{speaker.picture}}">
    </a>
    <h3 class="speaker__name">
      <a title="See details about {{speaker.name}}'s talk" href="/{{path}}">
        {{speaker.name}}
      </a>
    </h3>
  {{else}}
    <ul class="speaker__picture-list">
    {{#speakers}}
      <li>
         <a title="See details about the talk" href="/{{../path}}"> 
          <img class="speaker__picture" src="/assets/img/{{picture}}">
         </a> 
      </li>          
    {{/speakers}}
    </ul>
    <h3 class="speaker__name">
      {{#each speakers}}
        {{#if @last }}
        &amp;
        {{/if}}
        <a title="See details about {{name}}'s talk" href="/{{../path}}">
          {{name}}
        </a>
      {{/each}}
    </h3>
  {{/if}}
  <p class="speaker__talk subheader"><a title="See details about the talk '{{description}}'" href="/{{path}}">{{ description }}</a></p>
</article>