<!doctype html>
<html class="no-js" lang="en">
  <head>
    {{>head}}
    {{>favicons}}
    {{>twitter-card}}
    {{>og}}
    {{>analytics}}
  </head>
  <body>
    {{>async-css}}
    {{>nav}}

    {{>header}}

    <main class="site-content">

      {{#if collections.speakers}}
        <ul class="speakers-list row align-spaced">
          {{#each collections.speakers}}
          <li class="small-10 medium-4 large-4 column">
            {{>speaker-card}}
          </li>
          {{/each}}
        </ul>

        <hr>
      {{/if}}

      {{>page}}

    </main>

    {{>footer}}

    <script src="/assets/js/app.js"></script>
  </body>
</html>